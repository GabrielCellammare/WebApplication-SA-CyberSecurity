package application.util.customMessage;

import java.awt.Label;

public final class DisplayMessage {

    public static void showPanel(String message) {
        // Crea una finestra utilizzando la classe SecureJFrame
        SecureJFrame frame = new SecureJFrame("MESSAGGIO DALLA WEB APPLICATION: ");
        
        // Crea il pannello con il messaggio
        Label panel = new Label(message);
        frame.getContentPane().add(panel);
        
        // Configurazioni della finestra
        frame.pack();
        frame.setLocationRelativeTo(null);
        frame.setAlwaysOnTop(true);

        // Mostra la finestra
        frame.setVisible(true);

        // Aggiungi un listener per gestire la chiusura della finestra
        frame.addWindowListener(new java.awt.event.WindowAdapter() {
            @Override
            public void windowClosing(WindowEvent windowEvent) {
                frame.setVisible(false);
            }
        });
    }
}
