package application.util;

import java.util.regex.Pattern;

public final class EmailChecker {
	
	
	final static Pattern ptr = Pattern.compile("(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=^_`{|}~-]+)*\r\n"
			+ "|\"(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21\\x23-\\x5b\\x5d-\\x7f]\r\n"
			+ "|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])*\")\r\n"
			+ "@\r\n"
			+ "(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\r\n"
			+ "|\\[(?:(?:(2(5[0-5]|[0-4][0-9])\r\n"
			+ "|1[0-9][0-9]|[1-9]?[0-9]))\\.){3}(?:(2(5[0-5]|[0-4][0-9])\r\n"
			+ "|1[0-9][0-9]|[1-9]?[0-9])|[a-z0-9-]*[a-z0-9]:(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21-\\x5a\\x53-\\x7f]\r\n"
			+ "|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])+)\\])");
	public static boolean isValidEmail(String email) {
		return ptr.matcher(email).matches();
	}

}
