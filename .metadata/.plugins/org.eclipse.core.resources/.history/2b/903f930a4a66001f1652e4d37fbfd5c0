				cookieData.addProperty("decryptedPassword", passwordCookie);
			} catch (Exception e) {
				System.out.println("ERRORE CON L'ACCESSO CON I COOKIE NEL DO POST");
				e.printStackTrace();
			}
		}

		response.getWriter().write(cookieData.toString());
	}
