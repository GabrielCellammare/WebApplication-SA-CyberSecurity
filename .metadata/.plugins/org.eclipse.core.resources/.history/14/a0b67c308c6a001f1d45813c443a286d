package application.util.customMessage;

import java.awt.Dimension;

import javax.swing.JLabel;
import javax.swing.JPanel;

package application.util.customMessage;

import java.awt.Dimension;
import javax.swing.JLabel;

final class Label extends SecureJPanel {

    private static final long serialVersionUID = 1L;
    private JLabel label;

    protected Label(String message) {
        super(message);  // Chiamata al costruttore della classe madre SecureJPanel
        this.label = new JLabel(message);
        add(label);
    }

    @Override
    public Dimension getPreferredSize() {
        return super.getPreferredSize();  // Usa il metodo sovrascritto in SecureJPanel
    }
}

}
