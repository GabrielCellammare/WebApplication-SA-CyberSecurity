public class ProposalDAO {
	public static boolean userRegistration(String email, byte[] contenutoFile, String nomeFile)
			throws IOException {


		Connection con_write = null;

		try {
			Class.forName("com.mysql.cj.jdbc.Driver");

			con_write = DatabaseConnection.getConnectionWrite();

			try (PreparedStatement ps_proposta = con_write.prepareStatement(DatabaseQuery.insertProposta())) {
				ps_proposta.setString(1, id_user);
				ps_proposta.setBytes(2, filename);
				ps_proposta.setString(3, fileContent);

				int rowsAffected = ps.executeUpdate();

				return rowsAffected > 0;

			} catch (SQLException e) {
				CustomMessage.showPanel("Si è verificato un errore durante l'inserimento della proposta!");
				e.printStackTrace();
			}
		} catch (ClassNotFoundException e) {
			CustomMessage.showPanel("Si è verificato un problema di connessione!");
			e.printStackTrace();
		} finally {
			// Chiusura della connessione nel blocco finally
			try {
				if (con != null) {
					con.close();
				}
			} catch (SQLException e) {
				e.printStackTrace();
			}
		}
		return false;
	}
